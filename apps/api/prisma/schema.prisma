generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Survey {
  id        String    @id @default(cuid())
  title     String
  createdAt DateTime  @default(now())
  questions Question[]
}

model Question {
  id        String   @id @default(cuid())
  text      String
  type      String
  order     Int
  surveyId  String
  survey    Survey   @relation(fields: [surveyId], references: [id])
  answers   Answer[]
  createdAt DateTime @default(now())
}

model Answer {
  id         String   @id @default(cuid())
  questionId String
  question   Question @relation(fields: [questionId], references: [id])
  value      String
  userId     String?
  createdAt  DateTime @default(now())
}
